---
import HeaderLink from './HeaderLink.astro'
import { HOMEPAGE_URL, SITE_TITLE, REPOSITORIES_URL } from '../config'
import { IoLogoGithub } from 'react-icons/io5'
import FootprintIcon from './icons/footprint'
import ThemeSwitcher from './ThemeToggleButton'
import Menulist from './Menulist'
---
<header class="fixed w-full p-2 z-20 backdrop-blur-md">
  <div class="mx-auto max-w-3xl">
    <nav class="flex items-center gap-3 text-base">
      <a href="/" class="group">
        <h2 class="font-semibold tracking-tighter p-2 font-mplus text-xl transition-transform">
          <FootprintIcon />
          {SITE_TITLE}
        </h2>
      </a>
      <div class="items-center gap-6 hidden md:flex">
        <HeaderLink href={REPOSITORIES_URL}><IoLogoGithub/>My Repo</HeaderLink>
        <HeaderLink href="https://github.com/kaminzhi/kaminzhi.github.io" target="_blank"
          ><IoLogoGithub />Source</HeaderLink
        >
      </div>
      <div class="flex-1"></div>
      <ThemeSwitcher client:visible />
      <Menulist client:visible />
    </nav>
  </div>
</header>

